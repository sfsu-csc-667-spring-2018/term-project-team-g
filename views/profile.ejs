<% include ./partials/header %>


<html>
<head>
<style>
.card {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
    max-width: 300px;
    margin: auto;
    margin-top: 50px;
    text-align: center;
}

.HighScore {
    color: grey;
    font-size: 18px;
}

button {
    border: none;
    outline: 0;
    display: inline-block;
    padding: 8px;
    color: white;
    background-color: #000;
    text-align: center;
    cursor: pointer;
    width: 100%;
    font-size: 18px;
}

a {
    text-decoration: none;
    font-size: 22px;
    color: black;
}

button:hover, a:hover {
    opacity: 0.7;
}

</style>
</head>


<!-- Add icon library -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="card">
  <img src="https://www.shareicon.net/data/128x128/2015/09/23/644959_user_512x512.png" alt="test" style="width:50%; margin-left: auto;margin-right: auto;">
  <% if (user){ %>
  		<h1> <%=  user.username  %> </h1>
  <% }  %>	   
  <p class="HighScore">High Score</p>
  <p class="HighScore">Change Password</p>
  
  <form action="/user/register" method="POST">
		<div class="form-group">
			<input id="pass" type="password" name="password" placeholder="Password" class="form-control" required>
		</div>
		<div class="form-group">
			<input id="cpass" type="password" name="cpassword" placeholder="Confirm password" class="form-control" required>
		</div>
			
		<div class="form-group">
			<input id="sub" type="submit" value="Change Password" class="btn btn-lg btn-primary btn-block">
		</div>
		<script type="text/javascript" src="/scripts/register.js"></script>
	</form>
  
  
  
</div>

</html>
