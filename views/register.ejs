<% include ./partials/header %>
<div class="container">
	<% if(error) { %>
		<div id="error">
			<div class="alert alert-danger show fade center" role="alert">
				<% if(error == "nameexists") { %> 
					Sorry, that username is already taken	
				<% } else if(error == "emailexists") { %> 
					Sorry, someone has already registered with that email
				<% } else { %> 
					Sorry, something went wrong
				<% } %>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
		</div>
	<% } %>
	<div class="row" style="width: 30%; margin-top: 50px; margin-left: 35%;">
		<h1 class="center" style="width: 100%"> Register </h1>
		<form action="/user/register" method="POST">
			<div class="form-group">
				<input id="username" type="text" name="username" placeholder="Username" class="form-control" required>
			</div>
			<div class="form-group">
				<input id="email" type="email" name="email" placeholder="E-mail" class="form-control" required>
			</div>
			<div class="form-group">
				<input id="pass" type="password" name="password" placeholder="Password" class="form-control" required>
			</div>
			<div class="form-group">
				<input id="cpass" type="password" name="cpassword" placeholder="Confirm password" class="form-control" required>
			</div>
			<p id="error" class="text-danger center"></p>
			<p class="promise"><i class="fa fa-handshake-o" aria-hidden="true"></i> We won't spam. It's a promise.</p>
			<div class="form-group">
				<input id="sub" type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">
        <a href="/" class="btn btn-lg btn-danger btn-block">Cancel</a>
			</div>
			<script type="text/javascript" src="/scripts/register.js"></script>
		</form>
	</div>
</div>
<% include ./partials/footer %>
